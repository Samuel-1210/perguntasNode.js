<%- include ('partials/header.ejs') %>
<body>
   <%- include ('partials/navbar.ejs') %>
   <div class="container">
      <hr>
      <h1>Perguntas</h1>
      <hr>
      <a href="/perguntar" class="btn btn-secondary">Perguntar</a>
      <hr>
      <!-- Para cada pergunta Ã© criado um card com um botÃ£o 
         que vai direto para o id da pergunta  -->
      <% if(pergunta < 1){ %>
      <p class="text-light">Seja o primeiro a perguntar!</p>
      <%= pergunta.titulo %>
      <% } else { %>
      <% pergunta.forEach(pergunta =>{ %>
      <br>
      <div class="card">
         <div class="card-body bg-dark">
            <h3 class="text-light"> <%= pergunta.titulo %> </h3>
         </div>
         <div class="card-footer bg-secondary">
            <a href="/pergunta/<%= pergunta.id %>"> <button class="btn btn-dark">Responder</button> </a>
         </div>
      </div>
      <% }) %>
      <% } %> 
   </div>
</body>
<%- include ('partials/footer.ejs') %>